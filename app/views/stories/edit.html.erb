<div class="cf">
  <div class="fl w-100 ph3">
    <h3>Edit Story</h3>
    <p>Edit story <%= link_to @story.title, story_path(@story) %>.</p>
  </div>
</div>

<div class="cf pb3">
  <div class="fl w-100 ph3">
    <%= form_for @story,
      :url => story_path(@story.short_id),
      :method => :put,
      :html => { :id => "edit_story" } do |f| %>
      <%= render :partial => "stories/form",
          :locals => { :story => @story,
          :f => f } %>
      <div class="cf mb3">
        <div class="fl w-20 white">Submit
        </div>
        <div class="fl w-80 measure">
          <%= submit_tag "Update Story", :class => "pv1 ph2 mr3" %>
          Or
          <%= link_to "Cancel Edit",
            request.referer || story_path(@story) %>
        </div>
      </div>
    <% end %>

  </div>
</div>
